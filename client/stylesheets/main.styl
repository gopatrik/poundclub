html
	height: 100%

body
	min-height: 100%

html
	background black

p
	color white

section.background
	position fixed
	top 0 
	left 0 

	min-width 100%
	min-height 100%

	z-index -1
	background-size cover
	background-repeat no-repeat
	opacity 0.2

.fade-in
	animation fade-in .2s
	-webkit-animation @animation

@keyframes fade-in
	from
		opacity 0
	to
		opacity 0.2

.fade-out
	animation fade-out .2s
	-webkit-animation @animation

@keyframes fade-out
	from
		opacity 0.2
	to
		opacity 0


section.artist-area
	margin-top -100px
	width 100%
	// align(b)
	// margin-top 200px
	// width 100%


ul.related-artists
	center(1500px)
	li
		.artistBoxContainer
			// position relative
			height 300px
			.image
				margin auto
				height 95%
				width 95%
				background-size cover
				background-repeat no-repeat
				transition all .1s

			&.selected, &:hover
				.image
					box-shadow 0 0 8px 1px white
					height 100%
					width 100%
					-webkit-animation: jelly .7s linear both;
					animation: jelly .7s linear both;
				h3
					margin-top 30px

				


				// transition all 1s

			h3
				margin-top 10px
				font-size 18px
				font-weight bold
				font-family avenir
				color white

		col(1/5)
		cursor pointer
			

.page-title
	font-weight bold
	color white
	font-family avenir
		

.shareButtons	
	width 100px
	margin-left auto
	margin-right auto
	text-align center

.tweetStyle
	margin-left 10px


input.round
	display inline-block
	font-weight bold
	border-radius 5px
	height 50px
	width 200px
	font-size 22px 
	// text-transform uppercase
	font-family avenir
	color #2b2b2b
	background #f5f5f5
	padding-left 10px
	padding-right 10px
	border none
	font-weight 300
	


.yoText 
	font-size 15px

.inputs
	padding 50px
	background #00000069
	width 50%
	margin-left auto
	margin-right auto
	border-radius 7px

.submitForm
	display inline
	width 100%
	height 50px


.buttonContainer
	vertical-align: bottom;
	display inline-block
	width 100px
	height 50px

button.oversized
	border-radius 5px
	// width 100px
	// height 50px
	border none
	background #CE4141
	color white
	font-size 19px
	text-shadow: 0 1px 1px rgba(0,0,0,0.5);
	border-bottom: 2px solid #810B0B;
	padding 10px 20px
	font-family avenir, arial, sans
	font-weight bold

	&:active, &:hover
		margin-bottom -2px
		margin-top 2px
		border none	
		outline none
	&.extra
		padding 15px 30px
		font-size 32px

.scoreblurb

	width 200px
	margin-left auto
	margin-right auto
	padding 5px
	border-radius 5px
	p
		color white


.toplist
	list-style-type: none
	margin-top 10px
	padding-left 0

.mission-box
	position relative
	margin auto
	height 200px
	max-width 600px
	overflow hidden
	background-size 100% auto
	border 2px solid rgba(white,0.4)
	-webkit-animation bgscale 10s linear
	animation bgscale 10s linear
	p
		// font-weight normal
		font-size 20px

	.rot-cont
		border 1px solid rgba(white,0.4)
		margin-right -300px
		// border 4px solid white
		overflow hidden
		-webkit-transform:rotate(-45deg)
		transform:rotate(-45deg)

	// .left-artist
	// 	position absolute
	// 	width 100%


	.mission-artist
		height 400px
		background-size cover

	.right-artist
		-webkit-transform:rotate(45deg)
		transform:rotate(45deg)
		margin-top -100px
		-webkit-animation moveslide 10s linear
		animation moveslide 10s linear
		p
			z-index 1000
		
		
@keyframes moveslide
	from
		margin-top 0
	to
		margin-top -100px

@keyframes bgscale
	from
		background-size 200% auto
	to
		background-size 100% auto

section.artistForms
	height 80px

	h3
		margin 0

	.leftForm
