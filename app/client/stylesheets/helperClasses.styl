// font sizes
.small
	font-size 11px

.smaller
	font-size 10px
	line-height 13px

.medium
	font-size 20px

.big, .large
	font-size 28px

.huge
	font-size 90px

// weights
.light
	font-weight 100

.normal
	font-weight normal

.bold
	font-weight bold

// text-alignment
.left
	text-align left

.center
	text-align center

.right
	text-align right

// font colors
.subtle
	color subtle
.dark
	color #424242

.light
	color #999999

// metrics
.nm
	margin 0

.np
	padding 0

.mb
	margin-bottom 20px
.mbs
	margin-bottom 10px
.mt
	margin-top 20px
.mt-large
	margin-top 60px
	
.normal-padding
	padding 30px

// positioning
.fixed
	position fixed

.absolute
	position absolute

.relative
	position relative

.absoluteBottomRight
	position absolute
	bottom 20px
	right 20px
	text-align right
	font-family avenir
	font-size 30px
	p
		margin 0
.absoluteUpRight
	position absolute
	top 20px
	right 20px
	text-align right
	font-family avenir
	font-size 30px
	p
		margin 0

.nostyletype
	list-style-type none
	
a.nolink
	text-decoration none
	color black
	&:hover
		text-decoration underline

.no-border
	border none

.no-button
	padding 0
	border none
	&:hover
		// background rgba(black, 0.4)

.inline-list
	list-style-type none
	li
		display inline-block