docheight = 200px
.doc
	height docheight
	width (@height/1.4)
	border 8px solid subtle
	-webkit-box-shadow: 0px 0px 0px 4px #fff;
	-moz-box-shadow: 0px 0px 0px 4px #fff;
	box-shadow: 0px 0px 0px 4px #fff;
	v(border-radius, 8px)
	.header, .article, .footer
		// text-align center
		// position relative
		i.fa
			font-size 40px
			color subtle

		.msg
			align(b)
			font-family ptserif, serif
			font-size (docheight/10)
			color subtle
		&:hover
			background rgba(green,0.8)

	.header
		height docheight * 0.3
	.article
		height docheight * 0.4
	.footer
		height docheight * 0.3



.editor
	padding 20px
	min-height 200px
	min-width 200px
