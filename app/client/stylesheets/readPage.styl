@import 'vars'
@import 'functions'

.read
	aside
		display inline-block
		padding 10px
		div.status
			// background rgba(#7DC068, 0.6)
			v(border-radius, 50%)
			width 60px
			height @width
			border 6px solid subtle
			overflow hidden
			text-align center
			// padding 10px
			i.fa
				line-height 52px
				font-size 40px
				color subtle
	section
		display inline-block
		vertical-align top
		article
			padding 10px
			h1
				font-size 20px
				line-height @font-size*1.5
				font-weight bold
				margin 0
			h2
				font-size 20px
				line-height @font-size*1.5
				color subtle


aside.discussion-nav
	// position absolute
	col(1/3)
	padding 20px
	

	&.fixed
		top 0
	// min-height 200px
	ul
		li
			cursor pointer
			font-size 20px
			&.active
				font-weight bold

	// col(1/3)

section.discussions
	article.discussion
		margin-bottom 100px

	min-height 200px
	// col(2/3)
	// &.offset
	col(2/3,offset:1/3)
		
	article.topic-post
		header
			h1
				margin 0
				font-size 28px
	section.answers
		// margin-left 20px
		article.answer
			header
				h1
					margin 0
					font-size 24px
			// 
	padding-bottom 200px